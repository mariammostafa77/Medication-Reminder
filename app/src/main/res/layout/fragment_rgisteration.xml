<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RgisterationFragment"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerform"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/edtUsername"
        android:hint="Enter UserName"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/edtPhone"
        android:hint="Enter Phone"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"
        android:drawablePadding="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/edtEmailR"
        android:hint="Enter Email"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edtPasswordR"
        android:hint="Enter Password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edtConfirmPassword"
        android:hint="Confirm Password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="5dp"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/register"
    android:id="@+id/btnRegister"
    android:layout_marginTop="50dp"
    android:layout_marginHorizontal="20dp"
    android:drawablePadding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Register with Google?!"
        android:id="@+id/txtRegisterSocial"
        android:clickable="true"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>