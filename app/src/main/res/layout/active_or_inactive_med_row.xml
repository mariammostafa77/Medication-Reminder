<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inactiveConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgInactive"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/med"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />

        <TextView
            android:id="@+id/txtInactiveMedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgInactive"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="adol" />

        <TextView
            android:id="@+id/txtInactiveStrengthNumberOfTheMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/txtInactiveMedName"
            app:layout_constraintTop_toBottomOf="@+id/txtInactiveMedName"
            tools:text="4" />

        <TextView
            android:id="@+id/txtInactiveStrengthWeightOfTheMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/txtInactiveStrengthNumberOfTheMed"
            app:layout_constraintTop_toTopOf="@+id/txtInactiveStrengthNumberOfTheMed"
            tools:text="pill(s)" />
        <TextView
            android:id="@+id/inactive_med_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/txtInactiveStrengthWeightOfTheMed"
            app:layout_constraintTop_toTopOf="@id/txtInactiveStrengthNumberOfTheMed"
            tools:text="left" />
        <TextView
            android:id="@+id/txt_med_numer_stringth_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/txtInactiveMedName"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5" />
        <TextView
            android:id="@+id/txt_med_stringth_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/txt_med_numer_stringth_info"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="mg/g" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>